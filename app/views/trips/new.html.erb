<% flash.each do |type, msg| %>
  <div id="hideMe" class="sticky top-0 bg-red-100 border border-red-400 text-red-700 px-4 py-3 text-center rounded relative">
    <%= msg %>
  </div>
<% end %>
<div class="w-full bg-no-repeat bg-cover" style="background-image: url(<%= asset_path('default-map.svg')%>); height: 100vh; overflow-y: scroll;">
  <section class="text-gray-600 body-font">
    <div class="container px-6 py-24 mx-auto" style="">
      <div class="lg:w-2/4 md:w-1/4 bg-white p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 z-10 shadow-md rounded-lg mx-auto">
        <div class="px-5 pb-3 text-center">
          <h2 class="text-gray-900 text-2xl mb-1 font-bold title-font">Trip Distance Calculator</h2>
          <p class="leading-relaxed text-gray-600">Enter two different locations to calculate the total distance and travel time in the trip</p>
        </div>
        <hr class="mb-4" />
        <%= render partial: '/trips/form/trips_form_fields', :trip => @trip %>
      </div>
    </div>
  </section>
</div>