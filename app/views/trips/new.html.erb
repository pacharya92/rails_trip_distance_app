<% flash.each do |type, msg| %>
  <div id="hideMe" class="sticky top-0 bg-red-100 border border-red-400 text-red-700 px-4 py-3 text-center rounded relative">
    <%= msg %>
  </div>
<% end %>

<div class="w-full bg-no-repeat bg-cover" style="background-image: url(<%= asset_path('default-map.svg')%>); height: 100vh;">
  <section class="text-gray-600 body-font">
    <div class="container px-6 py-24 mx-auto">
      <div class="lg:w-2/4 md:w-1/4 bg-white p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 z-10 shadow-md rounded-lg">
        <div class="px-5 pb-3 text-center">
          <h2 class="text-gray-900 text-2xl mb-1 font-bold title-font">Trip Distance Calculator</h2>
          <p class="leading-relaxed text-gray-600">Enter two different locations to calculate the total distance in the trip</p>
        </div>
        <%= form_with url: "/create_trip", model: @trip do |form| %>
          <%= form.text_field :name, placeholder:'Trip Name' %>
          <!-- Address One heading -->
          <div class="flex-1 py-5 pl-5 overflow-hidden">
            <svg class="inline align-text-top" height="24px" viewBox="0 0 24 24" width="24px" xmlns="http://www.w3.org/2000/svg" fill="#000000">
              <g>
                <path d="m4.88889,2.07407l14.22222,0l0,20l-14.22222,0l0,-20z" fill="none" id="svg_1" stroke="null"></path>
