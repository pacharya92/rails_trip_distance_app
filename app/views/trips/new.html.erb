                <circle cx="7.04807" cy="6.97256" r="2.5" id="svg_3"></circle>
              </g>
            </svg>
            <h1 class="inline text-2xl font-semibold leading-none">Address One</h1>
          </div>
          <br />
          <!-- Location One Form -->
          <%= form.fields_for :locations, @location_one do |location| %>
            <div class="px-5 pb-5">
              <div class="flex">
                <div class="flex-grow pr-2">
                  <%= location.text_field :street_number, placeholder:'Street Number', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow w-3/4">
                  <%= location.text_field :street_name, placeholder:'Street Name', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
              <div class="flex">
                <div class="flex-grow pr-2">
                  <%= location.text_field :country, placeholder:'Country',class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow pr-2">
                  <%= location.select :governing_district_type, ["State", "Province"],{},class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow">
                  <%= location.select :governing_district, ["Georgia"], {}, class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
              <div class="flex">
                <div class="flex-grow w-3/4 pr-2">
                  <%= location.text_field :city, placeholder:'City', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400"  %>
                </div>
                <div class="flex-grow ">
                  <%= location.text_field :zip_code, placeholder:'Zip Code', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
            </div>
          <% end %>
          <!-- Address Two heading -->
          <div class="flex">
            <div class="flex-1 py-5 pl-5 overflow-hidden">
              <svg class="inline align-text-top" width="21" height="20.5" xmlns="http://www.w3.org/2000/svg" fill="#000000">
                <g>
                  <path d="m4.88889,2.07407l14.22222,0l0,20l-14.22222,0l0,-20z" fill="none" id="svg_1" stroke="null"></path>
                  <path d="m7.07935,0.05664c-3.87,0 -7,3.13 -7,7c0,5.25 7,13 7,13s7,-7.75 7,-13c0,-3.87 -3.13,-7 -7,-7zm-5,7c0,-2.76 2.24,-5 5,-5s5,2.24 5,5c0,2.88 -2.88,7.19 -5,9.88c-2.08,-2.67 -5,-7.03 -5,-9.88z" id="svg_2"></path>
                  <circle cx="7.04807" cy="6.97256" r="2.5" id="svg_3"></circle>
                </g>
              </svg>
              <h1 class="inline text-2xl font-semibold leading-none">Address Two</h1>
            </div>
          </div>
          <!-- Location Two Form -->
          <%= form.fields_for :locations, @location_two do |location| %>
            <div class="px-5 pb-5">
              <div class="flex">
                <div class="flex-grow pr-2">
                  <%= location.text_field :street_number, placeholder:'Street Number', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow w-3/4">
                  <%= location.text_field :street_name, placeholder:'Street Name', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
              <div class="flex">
                <div class="flex-grow pr-2">
                  <%= location.text_field :country, placeholder:'Country',class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow pr-2">
                  <%= location.select :governing_district_type, ["State", "Province"],{},class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
                <div class="flex-grow">
                  <%= location.select :governing_district, ["Georgia"], {}, class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
              <div class="flex">
                <div class="flex-grow w-3/4 pr-2">
                  <%= location.text_field :city, placeholder:'City', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400"  %>
                </div>
                <div class="flex-grow ">
                  <%= location.text_field :zip_code, placeholder:'Zip Code', class:"text-black placeholder-gray-600 w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform border-transparent rounded-lg bg-gray-200  focus:border-blueGray-500 focus:bg-white dark:focus:bg-gray-800 focus:outline-none focus:shadow-outline focus:ring-2 ring-offset-current ring-offset-2 ring-gray-400" %>
                </div>
              </div>
            </div>
          <% end %>
        <div class="px-5 pb-5">
          <hr class="mb-4" />
          <%= form.submit class:"text-white items-center bg-indigo-500 w-full border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 flex flex-col rounded text-lg" %>
        </div>
        <% end %>
    </div>
  </section>
</div>